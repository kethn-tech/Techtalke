# Environment Configuration for Production

# Database
DATABASE_URL=mongodb://admin:${MONGO_PASSWORD}@mongodb-primary:27017/techtalke_production?authSource=admin&replicaSet=rs0
MONGO_USERNAME=admin
MONGO_PASSWORD=your_extremely_secure_mongo_password_production

# Redis Cluster
REDIS_URL=redis://default:${REDIS_PASSWORD}@redis-cluster-1:6379
REDIS_URL_2=redis://default:${REDIS_PASSWORD}@redis-cluster-2:6379
REDIS_PASSWORD=your_extremely_secure_redis_password_production

# Application
NODE_ENV=production
CLIENT_URL=https://techtalke.app
CORS_ALLOWED_ORIGINS=https://techtalke.app,https://www.techtalke.app
PORT=4000

# Security - CRITICAL: Use strong, unique secrets in production
JWT_SECRET=your_extremely_secure_jwt_secret_production_min_64_chars_recommended
SESSION_SECRET=your_extremely_secure_session_secret_production_min_64_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_production_cloudinary_api_key
CLOUDINARY_API_SECRET=your_production_cloudinary_api_secret
GEMINI_API_KEY=your_production_gemini_api_key

# GitHub OAuth
GITHUB_CLIENT_ID=your_production_github_client_id
GITHUB_CLIENT_SECRET=your_production_github_client_secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_production_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_production_linkedin_client_secret

# Judge0 API
JUDGE0_API_KEY=your_production_judge0_api_key

# Monitoring
GRAFANA_PASSWORD=your_extremely_secure_grafana_password_production

# Logging
LOG_LEVEL=info
LOG_FILE=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@techtalke.app
SMTP_PASS=your_production_app_password
SMTP_FROM=TechTalke <noreply@techtalke.app>

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# CDN Configuration (if using)
CDN_URL=https://cdn.techtalke.app

# Sentry Error Tracking (optional)
SENTRY_DSN=your_sentry_dsn_url

# New Relic APM (optional)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=TechTalke Production